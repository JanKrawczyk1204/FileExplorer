<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="FileExplorer" Height="600" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="Open"></MenuItem>
                <MenuItem Header="Exit" Click="Exit"></MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock x:Name="statusRASH"></TextBlock>
        </StatusBar>
        <Grid Margin="0,0,0,0" Width="300">
            <TreeView x:Name="treeView" />
        </Grid>
        <Grid  Margin="0,0,0,0">
            <ScrollViewer x:Name="scrollViewer"  HorizontalScrollBarVisibility="Auto" />    
        </Grid>
       
    </DockPanel>

</Window>
